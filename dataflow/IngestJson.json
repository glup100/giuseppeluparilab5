{
	"name": "IngestJson",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Json1",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSynapseAnalyticsTable3",
						"type": "DatasetReference"
					},
					"name": "SaveDataToTable"
				}
			],
			"transformations": [
				{
					"name": "SplitValue"
				},
				{
					"name": "currencyConversion"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          date as string,",
				"          value as string,",
				"          customer_id as string,",
				"          product_id as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> source1",
				"source1 derive(value_decimal = toDecimal(dropLeft(value, 1), 16, 2),",
				"          currency = left(value, 1)) ~> SplitValue",
				"SplitValue derive(value_pounds = toDecimal(iif(currency == \"$\", value_decimal * 0.79, iif(currency == \"â‚¬\", value_decimal * 0.83, value_decimal)), 16, 2)) ~> currencyConversion",
				"currencyConversion sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     staged: true,",
				"     allowCopyCommand: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SaveDataToTable"
			]
		}
	}
}